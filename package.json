{
  "name": "cloud-blog",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:remix": "remix vite:dev --port 3000",
    "dev:docker": "docker compose -f docker/development/docker-compose.yml up -d",
    "dev:codegen": "graphql-codegen -c codegen/codegen.json -w",
    "dev:proxy": "prisma-accelerate-local postgresql://postgres:password@localhost:25432/postgres -p 8000 -t",
    "dev:css": "tcm app --ignore **/tailwindcss.css -w",
    "build": "remix vite:build",
    "lint": "eslint app",
    "lint:fix": "eslint --fix app",
    "start": "wrangler pages dev ./build/client",
    "typecheck": "tsc",
    "typegen": "wrangler types",
    "pages:deploy": "npm run build && wrangler pages deploy ./build/client",
    "pages:deploy:preview": "npm run build && wrangler pages deploy --branch development ./build/client",
    "prisma": "npm-run-all -p prisma:*",
    "prisma:migrate": "prisma format && next-exec prisma migrate dev",
    "prisma:generate": "prisma generate --no-engine",
    "graphql:schema": "tsx ./tools/exportSchema.ts",
    "log": "wrangler pages deployment tail --project cloud-blog"
  },
  "dependencies": {
    "@apollo/explorer": "^3.7.0",
    "@firebase/app": "^0.10.7",
    "@firebase/auth": "^1.7.5",
    "@monaco-editor/react": "^4.6.0",
    "@pothos/core": "^4.0.2",
    "@pothos/plugin-prisma": "^4.0.5",
    "@pothos/plugin-prisma-utils": "^1.0.5",
    "@prisma/client": "^5.17.0",
    "@react-libraries/next-exchange-ssr": "^1.0.6",
    "@remix-run/cloudflare": "^2.10.3",
    "@remix-run/cloudflare-pages": "^2.10.3",
    "@remix-run/react": "^2.10.3",
    "@urql/exchange-retry": "^1.3.0",
    "blurhash": "^2.0.5",
    "cookie": "^0.6.0",
    "daisyui": "^4.12.10",
    "firebase-storage": "^1.1.4",
    "graphql": "^16.9.0",
    "graphql-yoga": "^5.6.1",
    "isbot": "^5.1.13",
    "jose": "^5.6.3",
    "miniflare": "^3.20240718.0",
    "monaco-editor": "^0.50.0",
    "pothos-prisma-generator": "^1.0.5",
    "prism-react-renderer": "^2.3.1",
    "pure-uuid": "^1.8.1",
    "react": "^18.3.1",
    "react-daisyui": "^5.0.0",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.1",
    "react-icons": "^5.2.1",
    "remark": "^15.0.1",
    "urql": "^4.1.0",
    "use-deep-compare-effect": "^1.8.1"
  },
  "devDependencies": {
    "@node-libraries/wasm-avif-encoder": "^1.0.1",
    "@node-libraries/wasm-webp-encoder": "^1.1.1",
    "@cloudflare/workers-types": "^4.20240718.0",
    "@eslint/compat": "^1.1.1",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.9",
    "@graphql-codegen/typescript-operations": "^4.2.3",
    "@graphql-codegen/typescript-urql": "^4.0.0",
    "@parcel/watcher": "^2.4.1",
    "@remix-run/dev": "^2.10.3",
    "@storybook/react": "^8.2.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "^10.4.19",
    "eslint": "9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "graphql-tag": "^2.12.6",
    "next-exec": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.17.0",
    "prisma-accelerate-local": "^1.1.5",
    "pothos-schema-exporter": "^1.0.0",
    "remark-gfm": "^4.0.0",
    "tailwindcss": "^3.4.6",
    "tsx": "^4.16.2",
    "typed-css-modules": "^0.9.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.1",
    "vite": "^5.3.4",
    "vite-tsconfig-paths": "^4.3.2",
    "wrangler": "3.49.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
