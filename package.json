{
  "name": "cloud-blog",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:remix": "remix vite:dev --port 3000",
    "dev:docker": "docker compose -f docker/development/docker-compose.yml up -d",
    "dev:codegen": "graphql-codegen -c codegen/codegen.json -w",
    "dev:proxy": "prisma-accelerate-local postgresql://postgres:password@localhost:25432/postgres -p 8000 -t",
    "dev:css": "tcm app --ignore **/tailwindcss.css -w",
    "lint": "eslint app",
    "lint:fix": "eslint --fix app",
    "start": "wrangler pages dev ./build/client",
    "typecheck": "tsc",
    "typegen": "wrangler types",
    "build": "remix vite:build && wrangler pages functions build --outdir build/worker",
    "deploy": "pnpm run build && wrangler deploy",
    "deploy-secret": "tsx ./tools/deploySecret",
    "prisma": "npm-run-all -p prisma:*",
    "prisma:migrate": "prisma format && next-exec prisma migrate dev",
    "prisma:generate": "prisma generate --no-engine",
    "graphql:schema": "tsx ./tools/exportSchema.ts",
    "log": "wrangler pages deployment tail --project cloud-blog"
  },
  "dependencies": {
    "@apollo/explorer": "^3.7.0",
    "@firebase/app": "^0.10.12",
    "@firebase/auth": "^1.7.9",
    "@monaco-editor/react": "^4.6.0",
    "@pothos/core": "^4.2.0",
    "@pothos/plugin-prisma": "^4.2.1",
    "@pothos/plugin-prisma-utils": "^1.2.0",
    "@prisma/client": "^5.20.0",
    "@react-libraries/next-exchange-ssr": "^1.0.6",
    "@remix-run/cloudflare": "^2.12.1",
    "@remix-run/cloudflare-pages": "^2.12.1",
    "@remix-run/react": "^2.12.1",
    "@urql/exchange-retry": "^1.3.0",
    "blurhash": "^2.0.5",
    "cookie": "^0.7.2",
    "daisyui": "^4.12.12",
    "firebase-storage": "^1.1.4",
    "graphql": "^16.9.0",
    "graphql-yoga": "^5.7.0",
    "isbot": "^5.1.17",
    "jose": "^5.9.3",
    "miniflare": "^3.20240925.1",
    "monaco-editor": "^0.52.0",
    "pothos-prisma-generator": "^1.0.7",
    "prism-react-renderer": "^2.4.0",
    "pure-uuid": "^1.8.1",
    "react": "^18.3.1",
    "react-daisyui": "^5.0.5",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-icons": "^5.3.0",
    "remark": "^15.0.1",
    "urql": "^4.1.0",
    "use-deep-compare-effect": "^1.8.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241004.0",
    "@eslint/compat": "^1.2.0",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/typescript": "^4.1.0",
    "@graphql-codegen/typescript-operations": "^4.3.0",
    "@graphql-codegen/typescript-urql": "^4.0.0",
    "@node-libraries/wasm-avif-encoder": "^1.0.1",
    "@node-libraries/wasm-webp-encoder": "^1.1.1",
    "@parcel/watcher": "^2.4.1",
    "@remix-run/dev": "^2.12.1",
    "@storybook/react": "^8.3.5",
    "@types/cross-spawn": "^6.0.6",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "^10.4.20",
    "cross-spawn": "^7.0.3",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "graphql-tag": "^2.12.6",
    "next-exec": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "pothos-schema-exporter": "^1.0.0",
    "prisma": "^5.20.0",
    "prisma-accelerate-local": "^1.1.6",
    "remark-gfm": "^4.0.0",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.19.1",
    "typed-css-modules": "^0.9.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.1",
    "vite": "^5.4.8",
    "vite-tsconfig-paths": "^5.0.1",
    "wrangler": "^3.80.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
