{
  "name": "cloud-blog",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:remix": "remix vite:dev --port 3000",
    "dev:docker": "docker compose -f docker/development/docker-compose.yml up -d",
    "dev:codegen": "graphql-codegen -c codegen/codegen.json -w",
    "dev:css": "tcm app --ignore **/tailwindcss.css -w",
    "lint": "eslint app",
    "lint:fix": "eslint --fix app",
    "start": "wrangler dev",
    "typecheck": "tsc",
    "typegen": "wrangler types",
    "build": "remix vite:build",
    "deploy": "pnpm run build && next-exec -c deploy -- wrangler deploy",
    "deploy-secret": "tsx ./tools/deploySecret",
    "prisma": "npm-run-all -p prisma:*",
    "prisma:migrate": "prisma format && prisma migrate dev",
    "prisma:generate": "prisma generate",
    "graphql:schema": "tsx ./tools/exportSchema.ts",
    "log": "wrangler pages deployment tail --project cloud-blog"
  },
  "dependencies": {
    "@apollo/explorer": "^3.7.0",
    "@firebase/app": "^0.10.16",
    "@firebase/auth": "^1.8.1",
    "@monaco-editor/react": "^4.6.0",
    "@node-libraries/semaphore": "^1.0.3",
    "@pothos/core": "^4.3.0",
    "@pothos/plugin-prisma": "^4.4.0",
    "@pothos/plugin-prisma-utils": "^1.2.0",
    "@prisma/adapter-pg-worker": "^6.0.0",
    "@prisma/client": "6.0.0",
    "@prisma/pg-worker": "^6.0.0",
    "@react-libraries/next-exchange-ssr": "^1.0.6",
    "@remix-run/cloudflare": "^2.15.0",
    "@remix-run/react": "^2.15.0",
    "@urql/exchange-retry": "^1.3.0",
    "blurhash": "^2.0.5",
    "cookie": "^1.0.2",
    "daisyui": "^4.12.14",
    "firebase-storage": "^1.1.4",
    "graphql": "^16.9.0",
    "graphql-yoga": "^5.10.4",
    "hono": "^4.6.12",
    "hono-remix-adapter": "^0.5.1",
    "isbot": "^5.1.17",
    "jose": "^5.9.6",
    "miniflare": "^3.20241106.1",
    "monaco-editor": "^0.52.0",
    "pothos-prisma-generator": "^1.0.12",
    "prism-react-renderer": "^2.4.0",
    "pure-uuid": "^1.8.1",
    "react": "^18.3.1",
    "react-daisyui": "^5.0.5",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.2",
    "react-icons": "^5.3.0",
    "remark": "^15.0.1",
    "urql": "^4.2.1",
    "use-deep-compare-effect": "^1.8.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@eslint/compat": "^1.2.3",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/typescript": "^4.1.2",
    "@graphql-codegen/typescript-operations": "^4.4.0",
    "@graphql-codegen/typescript-urql": "^4.0.0",
    "@hono/vite-dev-server": "^0.17.0",
    "@node-libraries/wasm-avif-encoder": "^1.0.1",
    "@node-libraries/wasm-webp-encoder": "^1.1.1",
    "@parcel/watcher": "^2.5.0",
    "@remix-run/dev": "^2.15.0",
    "@storybook/react": "^8.4.6",
    "@types/cross-spawn": "^6.0.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "^10.4.20",
    "cross-spawn": "^7.0.6",
    "dotenv": "^16.4.5",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "graphql-tag": "^2.12.6",
    "next-exec": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "pothos-schema-exporter": "^1.0.0",
    "prisma": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.19.2",
    "typed-css-modules": "^0.9.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0",
    "vite": "^6.0.1",
    "vite-tsconfig-paths": "^5.1.3",
    "wrangler": "^3.91.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
